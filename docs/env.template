# ============================================
# üóÑÔ∏è DATABASE CONFIGURATION
# ============================================

# Tipo de banco: postgresql, mysql, sqlite
DATABASE_TYPE=postgresql

# Conex√£o PostgreSQL/MySQL
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=sample_db
DATABASE_USER=your_username
DATABASE_PASSWORD=your_password

# SQLite (alternativa para testes - descomente se usar)
# DATABASE_TYPE=sqlite
# SQLITE_DATABASE_PATH=./data/test.db

# Pool de conex√µes
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10
DATABASE_POOL_TIMEOUT=30

# ============================================
# ü§ñ LLM CONFIGURATION
# ============================================

# Provedor: openai, anthropic
LLM_PROVIDER=openai

# OpenAI Configuration
# Get your key at: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-openai-key-here
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.3
OPENAI_MAX_TOKENS=2000

# Anthropic Configuration (alternativa)
# Get your key at: https://console.anthropic.com/
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
# ANTHROPIC_MODEL=claude-3-opus-20240229
# ANTHROPIC_TEMPERATURE=0.3
# ANTHROPIC_MAX_TOKENS=2000

# ============================================
# üìä APPLICATION SETTINGS
# ============================================

# Logging
LOG_LEVEL=INFO
LOG_FILE=documentation_generation.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Output
OUTPUT_DIR=output
OUTPUT_FORMAT=markdown  # markdown, json, html
GENERATE_DIAGRAMS=true
DIAGRAM_FORMAT=mermaid  # mermaid, plantuml

# Processing
MAX_CONCURRENT_TABLES=5
BATCH_SIZE=10
RETRY_ATTEMPTS=3
RETRY_DELAY=2

# ============================================
# üîí SECURITY & PRIVACY
# ============================================

# PII Detection (futuro)
ENABLE_PII_DETECTION=false
PII_SENSITIVITY_LEVEL=high  # low, medium, high

# Data Masking
MASK_SENSITIVE_DATA=false
MASKED_FIELDS=password,ssn,credit_card

# ============================================
# üé® DOCUMENTATION PREFERENCES
# ============================================

# Language
DOCUMENTATION_LANGUAGE=pt-br  # en, pt-br, es

# Style
INCLUDE_EXAMPLES=true
INCLUDE_BUSINESS_CONTEXT=true
INCLUDE_USAGE_PATTERNS=true
INCLUDE_RELATIONSHIPS=true

# Detail Level
DETAIL_LEVEL=comprehensive  # basic, standard, comprehensive

# ============================================
# üåê STREAMLIT UI (quando implementar)
# ============================================

STREAMLIT_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
ENABLE_FILE_UPLOAD=true
MAX_UPLOAD_SIZE_MB=10

# ============================================
# üß™ DEVELOPMENT & TESTING
# ============================================

# Environment
ENVIRONMENT=development  # development, staging, production

# Debug
DEBUG_MODE=false
VERBOSE_LOGGING=false

# Testing
TEST_DATABASE_PATH=./data/test.db
MOCK_LLM_RESPONSES=false

